{{#if success }}
<div class="container p-4">
  <div class="row">
    <div class="col-4 col-sm-4 col-xs-4 col-md-4  pull-right ">
      <div class="alert alert-success alert-dismissable  p-2 float-right" role="alert"
      
          style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        {{success}}

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hiden="true">
            &times;
          </span>
        </button>
      </div>
    </div>
  </div>
</div>
{{/if}}



