{{#if user.admin}}


{{#each news}}
<h3>Titulo : <b>{{title}}</b></h3>
<div class="container">
    <div class="row">
       
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
            <p>
                <h3>Media</h3>
            </p>
            {{!--Carrousel--}}

            <div class="top10" align="center">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:50%;">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img  src="{{img1}}" alt="Los Angeles" style="height:250px;">
                        </div>

                        <div class="item">
                            <img  src="{{img2}}" alt="Chicago" style="height:250px;">
                        </div>

                        <div class="item">
                            <img  src="{{img3}}" alt="New york" style="height:250px;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <p align="center"><small id="" class="form-text text-muted">
                    Imagenes actuales
                </small></p>
            <form class="top2" action="/news/update-imgs" enctype="multipart/form-data" method="POST">
                <input type="text" class="hidden" name="id" value="{{id}}">
                <p><label for="">Actualizar Imagenes</label></p>
                <p>Imagen 1</p>
                <p><input type="file" enctype="multipart/form-data" name="img1" required></p>
                <p>Imagen 2</p>
                <p><input type="file" enctype="multipart/form-data" name="img2" required></p>
                <p>Imagen 3</p>
                <p><input type="file" enctype="multipart/form-data" name="img3 " required></p>
                <p class="pull-right">
                    <input type="submit" class="btn btn-default" value="Actualizar">
                </p>
            </form>

            {{!--End Carrousel--}}
        </div>
        <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">

            <p>
                <h3>Texto</h3>
            </p>
            <p><label for="">Texto completo</label></p>
           <div align="center"> 
                <textarea name="" id="" cols="50" rows="10">{{text1}} {{text2}} {{text3}}</textarea>
            </div>
            <p class="top10">
                <label for="">Actulizar textos</label>
            </p>
            <form action="/news/update-text" method="post">
                <input type="text" class="hidden" name="id" value="{{id}}">

                <p align="center"><textarea name="text1" id="text1" cols="50" rows="5">{{text1}}</textarea></p>
                <p align="center"><textarea name="text2" id="text2" cols="50" rows="5">{{text2}}</textarea></p>
                <p align="center"><textarea name="text3" id="text3" cols="50" rows="5">{{text3}}</textarea></p>


                <p class="pull-right">
                    <input type="submit" class="btn btn-default" value="Actualizar">
                </p>
            </form>

        </div>
    </div>
</div>



{{/each}}

{{else}}

<h1>No esta permitido que estés aquí</h1>


{{/if}}



<form action=""method="Post"></form>