<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

<div class="container">
    <div class="row my-element">




        {{#if user.admin}}


        {{#each goal}}
        {{id}}
        {{id_proyecto}}
        {{id_usercreated}}
      

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" >

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" id="usercreatedinfo">
                    <li class="">
                        {{title}}
                    </li>
                </ol>
            </nav>

            <div class="w3-card-4">
                <p><small>creado hace:</small>{{timeago created_at}}</p>
                <div align="center">
                                    <img src="{{img}}" width="220px" alt="Alps">
                </div>
                <div class="w3-container w3-center">
                    <h4>
                        {{name}}
                    </h4>
                    <p>{{desc}}</p>
                    <p>Condición: {{condition}}</p>
                    <p><b>Status:</b>{{status}}</p>
                    <p><b>Porcentaje:</b>{{percentage}}</p>
                    <p>FEcha de inicio: {{init}} / fecha de cierre: {{end}}</p>
                    
                </div>
            </div>
        </div>



        {{else}}

        Parece que hubo un error y no hay ningun badge

        {{/each}}



        {{else}}

        <h2>Usted no debería estar aquí</h2>

        {{/if}}


    </div>
</div>