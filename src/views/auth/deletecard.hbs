<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>


<div class="container my-element">
    <div class="row">


        {{#if user}}


        {{#if id}}



        <div class="col-lg-12">
            <div class="jumbotron">
               
                <div>

                </div>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                 <h5>Datos de tarjeta</h5>
                            </th>

                        </tr>
                    </thead>
                    <tbody id="Tarjeta">

                    </tbody>
                </table>
       




                <script>

                    function getclarddt() {

                        $.ajax({
                            type: 'get',
                            url: '/card-get/{{id}}/{{user.id_client}}',
                            dataType: 'json',

                            success: (data) => {
                                const row = `
                                         <tr>
                                            <td>${ data.holder_name}</td>   
                                              </tr>
                                            <tr>
                                            <td>${ data.type}</td>                                 
                                             </tr>

                                            
                                                     <tr>
                                            <td>${ data.brand}</td>   
                                              </tr>

                                                         <tr>
                                            <td>${ data.bank_name}</td>   
                                              </tr>

                                              <tr>
                                            <td> fecha de registro: ${ data.creation_date}</td>
                                               </tr>
                                
                                              
                                        `;
                                $('#Tarjeta').append(row);

                            }

                        });
                    } getclarddt();

                </script>
            </div>
        </div>
        <div class="col-lg-12">

            <form action="/cardclient-delete" method="post">

                <input type="text" class="hidden" name="id_card" value="{{id}}" />

                <input type="text" class="hidden" name="id_client" value="{{user.id_client}}" />
                <div class="pull-right">
                    <small>Nota: no puedes eliminar una tarjeta si esta suscrita a un plan
                    </small>
                </div><br>
                <input type="submit" class="btn btn-danger pull-right" value="Eliminar Tarjeta">
            </form>
        </div>

        <script>

        </script>

        {{else}}


        <h4>USted no puede estar aquí</h4>

        {{/if}}


        {{else}}


        <h4>USted no puede estar aquí</h4>

        {{/if}}


    </div>
</div>