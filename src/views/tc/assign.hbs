        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>


<div class="container">
    <div class="row">
        {{!--
        recibir y mandar

        id_tc , id_user , id_proyecto
        
        --}}

        {{#if tc}}

        <div class="col-lg-12">

            <div id="tcDiv"></div>

            <div id="projectDiv"></div>

            

            {{user.id}}



            <script>
                // -- /get-owners
                function getProject() {

                    $.ajax({
                        type: 'GET',
                        url: '/projects/get/{{tc.id_project}}',
                        dataType: 'json',
                        success: (data) => {
                            console.log(data)
                            data.forEach((item) => {

                                const row = `<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <a></a>
                            <div class="jumbotron"> <h4 class="">${ item.title}</h4>
                            <small>Pagos por</small>
                                <p class="lead">
                                     ${ item.description}
                                </p>
                                <hr class="my-4">
                            </div>
                            </div>`;
                                $('#projectDiv').append(row);
                            });
                        }

                    });
                    //$("#ownerT").load();

                };

                function getunit() {

                    $.ajax({
                        type: 'GET',
                        url: '/projects/get/{{tc.id}}',
                        dataType: 'json',
                        success: (data) => {
                            console.log(data)
                            data.forEach((item) => {

                                const row = `<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <a></a>
                            <div class="jumbotron"> <h2 class="">${ item.name}</h2>
                            <small>Pagos por</small>
                                <p class="lead">
                                    $ ${ item.amount}.00  ${item.currency}
                                </p>
                                <hr class="my-4">
                                <a class="btn btn-primary btn-lg" href="/subscribe/${ item.id}" role="button">Saber m√°s</a>
                            </div>
                            </div>`;
                                $('#projectDiv').append(row);
                            });
                        }

                    });
                    //$("#ownerT").load();

                };


                getProject(),getunit();
            </script>

        </div>

        {{else}}
        no tc
        {{/if}}
    </div>
</div>