        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>


<div class="container">
    <div class="row my-element">
        {{!--
        recibir y mandar

        id_tc , id_user , id_proyecto
        
        --}}

        {{#if tc}}

        <div class="col-lg-12">

            <div id="tcDiv"></div>

            <div id="projectDiv"></div>

            


            <script>
                // -- /get-owners
                function getProject() {

                    $.ajax({
                        type: 'GET',
                        url: '/projects/get/{{tc.id_project}}',
                        dataType: 'json',
                        success: (data) => {
                            console.log(data)
                            data.forEach((item) => {

                                const row = `<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <a></a>
                            <div class="jumbotron"> <h4 class="">${ item.title}</h4>
                            <small>Pagos por</small>
                                <p class="lead">
                                     ${ item.description}
                                </p>
                                <hr class="my-4">
                            </div>
                            </div>`;
                                $('#projectDiv').append(row);
                            });
                        }

                    });
                    //$("#ownerT").load();

                };

                function getunit() {

                    $.ajax({
                        type: 'GET',
                        url: '/tc-info/{{tc.id}}',
                        dataType: 'json',
                        success: (data) => {
                            console.log(data)
                            data.forEach((item) => {

                                const row = `<div align="center" class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="jumbotron"> <h2 class="">${ item.name}</h2>
                           <img src="${ item.img}" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);" class="card-img-top  rounded-circle w-50 animated  fadeIn " width="80" alt="">
                            <br>
                            <small>Pago unico por</small>
                                <p class="lead">
                                    $ ${ item.amount}.00  
                                </p>
                                <hr class="my-4">
                            </div>
                            </div>`;
                                $('#tcDiv').append(row);
                            });
                        }

                    });
                    //$("#ownerT").load();

                };


                getProject(),getunit();
            </script>

        </div>

        {{else}}
        no tc
        {{/if}}
    </div>
</div>